@model IEnumerable<Deft2.Models.LocationViewModel>

@{
    ViewBag.Title = "Location";
}

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<h3 class="alert alert-success">Locations</h3>
@using (Html.BeginForm())
{
    <p>
        @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table table-condensed table-hover">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Location", "index", new { sortOrder = ViewBag.NameLocationSortParm })(model => model.LocationName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ClosedSunday)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ClosedSunday)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.LocationId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.LocationId })
                </td>
            </tr>
        </tbody>
    }

</table>
